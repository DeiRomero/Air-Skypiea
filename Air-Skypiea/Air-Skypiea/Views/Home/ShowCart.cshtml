@model Air_Skypiea.Models.ShowCartViewModel

@{
    ViewData["Title"] = "Cart";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-4">
               <h4> @Html.DisplayNameFor(model => model.Code)</h4>
            </dt>
            <dd class="col-sm-8">
                <h4>@Html.DisplayFor(model => model.Code)</h4>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-8">
                <h3>@Html.DisplayFor(model => model.Date)</h3>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Source)
            </dt>
            <dd class="col-sm-8">
                <h3>@Html.DisplayFor(model => model.Source)</h3>
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Target)
            </dt>
            <dd class="col-sm-8">
                <h3>@Html.DisplayFor(model => model.Target)</h3>
            </dd>
          
        </dl>
    </div>
    <div class="col-md-8">
            <div class="col-md-12">
                <form asp-action="ShowCart">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Remark" class="control-label"></label>
                        <input asp-for="Remark" class="form-control" />
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Confirmar Reserva" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reservaciónes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Flight.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Flight.Source)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Flight.Target)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Flight.Remark)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().flightStatus)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Reservations)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.Source)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.Target)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Flight.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.flightStatus)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-warning">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-outline-danger">Borrar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [25, 50, 100, 200, -1],
                    [25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
}