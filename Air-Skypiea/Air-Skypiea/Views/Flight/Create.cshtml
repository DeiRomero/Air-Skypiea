@model Air_Skypiea.Models.CreateFlightViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Vuelo</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Source" />
            <input type="hidden" asp-for="Target" />

            <partial name="_CreateFlight" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

