@model Air_Skypiea.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card bg-light mb-3" style="width: 450px; height: 225px">
            <h5 class="card-header text-center text-write"><i class="fa-solid fa-lock text-navy text-write"></i> Recuperación de Constraseña</h5>
            <div class="card-body bg-info">

                <form method="post">                  
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" value="Recuperación de Contraseña" class="btn btn-outline-primary" />
                        <a asp-action="Login" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
